
<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h4 class="d-flex align-items-center m-4" style="background-color: #EEEEEE;">注文情報確認</h4>
  </div>

　<div class="row">
    <div class="col-sm-8">
      <% @cart_items.each do |cart_item| %>
        <table class="table table-bordered">
            <thead style="background-color: #EEEEEE;">
                <tr>
                    <td>商品名</td>
                    <td>単価（税込）</td>
                    <td>数量</td>
                    <td>小計</td>
                </tr>
            </thead>
            <tbody>
            <!--画像＋商品名、単価、数量、小計　を表示-->
                <tr>
                    <td class="align-middle">
                        <%= image_tag cart_item.item.get_item_image(60,40) %>
                        <strong><%= cart_item.item.name %></strong>
                    </td>
                    <td class="align-middle"><%= cart_item.item.price.to_s(:delimited) %></td>
                    <td class="align-middle"><%= cart_item.amount %></td>
                    <td class="align-middle"><%= cart_item.subtotal.to_s(:delimited) %></td>
                </tr>
                <tr>
                    <td colspan="3"></td>
                    <td>
                        <% delivery_cost = cart_item.item.artist.delivery_cost %>
                        配送料：<%= delivery_cost.to_s(:delimited) %>円
                    </td>
                </tr>
            </tbody>
        </table>
    　<% end %>
    </div>

    <div class="offset-sm-1 col-sm-3">
    <!--商品合計、送料合計、請求金額　を表示-->
        <table class="table table-bordered">
            <tr>
                <td style="background-color: #EEEEEE;">商品合計</td>
                <td><%= @total_item_price.round.to_s(:delimited) %></td>
            </tr>
            <tr>
                <td style="background-color: #EEEEEE;">送料合計</td>
                <td><%= @total_delivery_cost.to_s(:delimited) %></td>
            </tr>
            <tr>
                <td style="background-color: #EEEEEE;">ご請求金額</td>
                <td><%= @order.total_payment.to_s(:delimited) %></td>
            </tr>
        </table>
    </div>
　</div>

    <!--支払方法、お届け先-->
　<div class="row m-3">
    <strong>支払方法</strong>
    <span class="ml-3">
        サンプルカード<br>
        カード番号: 4242424242424242<br>
        有効期限: 12/30<br>
        CVC: 123<br>
        カード名義: YUI ARAGAKI
    </span>
　</div>

　<div class="row mt-3 ml-3">
    <strong>お届け先</strong>
    <span class="ml-3"><%= '〒' + @order.postal_code + '' + @order.address %></span>
　</div>
　<div class="row ml-3">
    <strong>宛名　　</strong>
    <span class="ml-3"><%= @order.name %></span>
  </div>

<!--@orderを全て、ユーザーに見えない状態でcreateへ送る-->
<%= form_with model: @order, url: customer_orders_path, method: :post do |f| %>
    <%= f.hidden_field :postal_code, :value => @order.postal_code %>
    <%= f.hidden_field :address, :value => @order.address %>
    <%= f.hidden_field :name, :value => @order.name %>
    <%= f.hidden_field :delivery_cost, :value => @order.delivery_cost %>
    <%= f.hidden_field :total_payment, :value => @order.total_payment %>

    <div class="text-center mt-5 pt-3">
        <script type="text/javascript" src="https://checkout.pay.jp" class="payjp-button" data-key="pk_test_751e71893edfeddc9c4dd96f" data-submit-text="注文を確定する" data-partial="false"></script>
    </div>
<% end %>

  <%= form_with url: homes_purchase_path do %>

  <% end %>

</div>