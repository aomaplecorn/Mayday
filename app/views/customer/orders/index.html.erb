<h1>Customer::Orders#index</h1>
<!--以下、購入商品の種類（タブ本体）-->
<ul class="nav nav-tabs">
  <li class="nav-item">
    <a href="#contents1" class="nav-link active" data-toggle="tab">購入した音楽</a>
  </li>
  <li class="nav-item">
    <a href="#contents2" class="nav-link" data-toggle="tab">購入したグッズ</a>
  </li>
</ul>
<!--ここまで、購入商品の種類（タブ本体）-->

<div class="tab-content">
    <div id="contents1" class="tab-pane active">
        <% @order_details.each do |order_detail| %>
            <!--アルバムIDが存在していた場合、アルバムの購入履歴を表示する-->
            <% if order_detail.album_id != nil %>
                <%= order_detail.album_id %>
            <% end %>
        <% end %>
    </div>

    <div id="contents2" class="tab-pane">
        <div class="container">
          <div class="row">
            <div class="col-1"></div>
            <h4 class="d-flex align-items-center m-4" style="background-color: #EEEEEE;">注文履歴一覧（グッズ）</h4>
          </div>

        　<table class="table" border="1">
            <thead style="background-color: #EEEEEE;">
                <tr>
                    <td>注文日</td>
                    <td>配送先</td>
                    <td>注文商品</td>
                    <td>支払金額</td>
                    <td>ステータス</td>
                    <td>注文詳細</td>
                </tr>
            </thead>
            <tbody>
                <% @order_details.each do |order_detail| %>
                    <% if order_detail.order.customer_id == current_customer.id %>
                    <% if order_detail.album_id == nil %>
                    <!--アルバムIDが存在していた場合、アルバムの購入履歴を表示する-->
                <tr>
                    <!--注文日-->
                    <td><% order_detail.album_id %></td>
                    <td class="align-middle"><%= order_detail.order.created_at.strftime( '%Y/%m/%d') %></td>
                    <!--配送先-->
                    <td class="align-middle"><%= '〒' + order_detail.order.postal_code %></br>
                        <%= order_detail.order.address %></br>
                        <%= order_detail.order.name %></td>
                    <!--注文商品-->
                    <td class="align-middle">
                        <%= order_detail.item.name %></br>
                    </td>
                    <!--「支払金額」合計を表示-->
                    <td class="align-middle"><%= order_detail.order.total_payment.to_s(:delimited) %>円</td>
                    <!--現在のステータス（入金・発送など）を表示-->
                    <td class="align-middle"><%= order_detail.order.status_i18n %></td>
                    <td class="align-middle"><%= link_to "表示する", customer_order_path(order_detail.order.id), class: "btn btn-primary" %></td>
                </tr>
                <% end %>
                <% end %>
                <% end %>
            </tbody>
        　</table>
        </div>
    </div>
</div>