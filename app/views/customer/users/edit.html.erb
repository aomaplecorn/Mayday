<!--以下、エラーメッセージ-->
<% if @customer.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<!--ここまで、エラーメッセージ-->

<div class="container">
  <div class="row">
    <h4 class="d-flex align-items-center m-3" style="background-color: #EEEEEE;">お客様情報の変更</h4>
  </div>

  <table class="table d-flex align-items-center justify-content-center my-auto mx-auto">
    <tbody>
      <%= form_with model: @customer, url: customer_users_path(current_customer.id), method: :patch do |f| %>
      <tr>
        <th colspan="3"></th>
      </tr>
      <tr>
        <td class="form_control pt-3 mt-3">氏名</td>
        <td class="form_control pt-3 mt-3"><%= f.text_field :name %></td>
      </tr>
      <tr>
        <td class="form_control pt-3 mt-3">フリガナ</td>
        <td class="form_control pt-3 mt-3"><%= f.text_field :name_kana %></td>
      </tr>
      <tr>
        <td class="form_control pt-3 mt-3">郵便番号（ハイフンなし）</td>
        <td class="form_control pt-3 mt-3"><%= f.number_field :postal_code %></td>
      </tr>
      <tr>
        <td class="form_control pt-3 mt-3">ご住所</td>
        <td class="form_control pt-3 mt-3"><%= f.text_area :address %></td>
      </tr>
      <tr>
        <td class="form_control pt-3 mt-3">ご連絡先</td>
        <td class="form_control pt-3 mt-3"><%= f.number_field :telephone_number %></td>
      </tr>
      <tr>
        <td class="form_control pt-3" >
          <%= f.submit 'プロフィールを変更する', class: "btn btn-success mt-3" %>
        </td>
        <td colspan="3"></td>
        <td><%= link_to "戻る", customer_mypage_path, class: "btn btn-secondary m-3" %></td>
      <tr>
      <tr>
        <td colspan="4"></td>
        <td><%= link_to "退会する", customer_check_path, class: "btn btn-danger m-3" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>






