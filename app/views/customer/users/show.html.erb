<h1>Customer::Users#show</h1>

<div class="container">
  <div class="row">
    <h4 class="d-flex m-3" style="background-color: #EEEEEE;">お客様情報</h4>
  </div>

<table class="table d-flex justify-content-center">
  <tbody>
    <tr>
      <th colspan="3"></th>
    </tr>
    <tr>
      <td class="p-3">氏名</td>
      <td class="p-3"><%= @customer.name %></td>
    </tr>
    <tr>
      <td class="p-3">フリガナ</td>
      <td class="p-3"><%= @customer.name_kana %></td>
    </tr>
    <tr>
      <td class="p-3">郵便番号</td>
      <td class="p-3"><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <td class="p-3">ご住所</td>
      <td class="p-3"><%= @customer.address %></td>
    </tr>
    <tr>
      <td class="p-3">ご連絡先</td>
      <td class="p-3"><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <td colspan="3"></td>
      <td><%= link_to "お客様情報の編集はこちら", customer_edit_mypage_path, class: "btn btn-success m-3" %></td>
    <tr>
  </tbody>
</table>

</div>








