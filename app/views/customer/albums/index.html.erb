<h1>Customer::Albums#index</h1>

<h4 class="ml-3">リリース中</h4>
<table class="table">
    <tbody>
        <tr>
            <% @albums.order(created_at: :desc).each do |album| %>
                <% if album.released == true %>
                    <td>
                        <%= link_to customer_album_path(album.id) do %>
                            <%= image_tag album.get_jacket_image(200,200) %><br>
                            <%= album.name %><br>
                            <%= album.artist.name %>
                        <% end %>
                    </td>
                <% end %>
            <% end %>
        </tr>
    </tbody>
</table>
