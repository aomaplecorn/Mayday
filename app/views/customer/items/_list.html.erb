<h2 class="m-3">最新のグッズ一覧</h2>

<div class="card-deck row row-cols-2 row-cols-md-3 g-4">
  <% @items.each do |item| %>
  <div class="col mb-3">
    <div class="card h-100">
      <%= link_to customer_item_path(item.id) do %>
      <div class="bd-placeholder-img card-img-top text-center" width="100%" height="300px">
        <%= image_tag item.get_item_image(600,500), class: "img-fluid" %>
      </div>
      <div class="card-body">
        <h5 class="card-title text-dark"><%= item.name %></h5>
      <% end %>
        <p class="card-text">販売者：<%= item.artist.name %></p>
        <p class="card-text">¥<%= item.price.to_s(:delimited) %>-</p>
        <p class="card-text">在庫<span class="text-danger">残り<%= item.amount %>個</span></p>
        <p class="card-text" style="white-space: pre-line;"><%= item.introduction %></p>

      </div>
      <div class="card-footer text-right">
        <small class="text-muted">Created date <%= item.created_at.strftime( '%Y/%m/%d' ) %></small>
      </div>
    </div>
  </div>
  <% end %>
</div>


