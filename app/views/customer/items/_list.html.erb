<h2 class="m-3">最新のグッズ一覧</h2>
<div class="card-deck">
  <% @items.each do |item| %>
  <div class="card">
    <%= link_to customer_item_path(item.id) do %>
    <div class="bd-placeholder-img card-img-top" width="100%" height="200">
      <%= image_tag item.get_item_image(600,500), class: "img-fluid" %>
    </div>
    <div class="card-body">
      <h5 class="card-title text-dark"><%= item.name %></h5>
    <% end %>
      <p class="card-text">¥<%= item.price.to_s(:delimited) %>-</p>
      <p class="card-text">在庫<span class="text-danger">残り<%= item.amount %>個</span></p>
      <p class="card-text" style="white-space: pre-line;"><%= item.introduction %></p>
      <p class="card-text"><small class="text-muted"><%= item.created_at.strftime( '%Y/%m/%d' ) %></small></p>
    </div>
  </div>
  <% end %>
</div>


