<% if flash[:notice] %>
    <p id="notice" class="alert alert-warning">
      <%= flash[:notice] %>
    </p>
<% end %>

<!--以下、アイテム詳細-->
<div class="container">
  <%= render 'customer/orders/item_detail', order: @order %>

  <h4 class="mx-auto my-auto">注文ステータス</h4>
  <%= form_with model: @order, url: artist_order_path(@order.id), method: :patch do |f| %>
  <div>
    <span class="mt-3"><%= f.select :status, Order.statuses_i18n.invert, prompt: "#{@order.status_i18n}" %></span>
    <span class="form-inline m-3"><%= f.submit '更新', class: "btn-sm btn-success" %></span>
  </div>
  <% end %>
</div>
<!--ここまで、アイテム詳細-->