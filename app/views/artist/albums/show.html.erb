<h1>Artist::Albums#show</h1>

<h2>アルバム詳細画面</h2>
<div class="row d-flex justify-content-center">
  <div class="col-2 ml-3">
    <%= image_tag @album.get_jacket_image(350,350) %>
  </div>
  <div class="col-xl-8 offset-xl-1">
    <h2><%= @album.name %></h2>
    <div>
      <%= @album.artist.name %>
    </div>
    <div>
      ¥<%= @album.price.to_s(:delimited) %>-
    </div>
    <div class="d-flex justify-content-end">
      <%= link_to 'アルバム・楽曲の編集', edit_artist_album_path(@album.id), class: "btn btn-primary" %>
    </div>
  </div>
  <div>
  <% if @album.released == true %>
    <p >このアルバムは公開されています</p>
    <% else %>
    <p>このアルバムは公開されていません</p>
  <% end %>
  </div>
</div>

<!--以下、楽曲一覧-->
<table class="table table-striped text-center">
  <thead>
    <tr class="bg-info text-white">
      <td>track</td>
      <td></td>
      <td>楽曲名</td>
      <td>値段</td>
      <td>楽曲ファイル</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    <% @musics.each do |music| %>
    <tr>
      <td class="align-middle"><%= music.track %></td>
      <td class="align-middle"><%= image_tag music.album.get_jacket_image(100,100) %></td>
      <td class="align-middle"><%= music.name %></td>
      <td class="align-middle text-center">¥<%= music.price.to_s(:delimited)%></td>
      <td class="align-middle text-start">
        <%= audio_tag(polymorphic_path(music.get_audio), loop: "loop",controls: true ,controlslist: "nodownload", class: "d-flex jusitfy-content-center") %>
        <%= audio_tag(polymorphic_path(music.get_test_audio),controls: true ,controlslist: "nodownload", class: "d-flex jusitfy-content-center") %>
      </td>
      <td class="align-middle text-center">
        <div class="panel-group">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h6 class="panel-title">
                <a data-toggle="collapse" href="#collapse1">詳細</a>
              </h6>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
              <div class="panel-body" style="white-space: pre-line;">
                <%= music.index_info %>
              </div>
            </div>
          </div>
        </div>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>






