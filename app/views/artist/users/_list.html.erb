<h2 class="m-3">最新アーティスト一覧</h2>
<div class="card-deck row row-cols-1 row-cols-md-2 row-cols-lg-3">
  <% @artists.each do |artist| %>
  <div class="col mb-3">
    <div class="card h-100">
      <%= link_to artist_user_path(artist.id) do %>
      <div class="bd-placeholder-img card-img-top text-center" width="100%" height="200">
        <%= image_tag artist.get_introduction_image(600,500), class: "img-fluid" %>
      </div>
      <div class="card-body">
        <h5 class="card-title text-dark"><%= artist.name %></h5>
      <% end %>
        <p class="card-text" style="white-space: pre-line;"><%= artist.introduction %></p>
      </div>
      <div class="card-footer text-right">
        <small class="text-muted">Last updated <%= artist.updated_at.strftime( '%Y/%m/%d') %></small>
      </div>
    </div>
  </div>
  <% end %>
</div>