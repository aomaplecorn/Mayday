<div class="container">
<!--アーティストの検索結果-->
  <div class="row">
    <div class="search-list">
      <h3 class="mt-3">検索結果：<strong><%= @keyword %></strong></h3>
      <table>
        <tbody>
          <tr class="d-flex align-content-between flex-wrap">
            <% @artists.each do |artist| %>
              <td class="d-flex justify-content-center m-3">
                <%= link_to artist_user_path(artist.id) do %>
                  <%= image_tag artist.get_introduction_image(400,200) %></br>
                  <%= artist.name %></br>
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

<!--アルバムの検索結果-->
  <div class="row">
    <div class="search-list">
      <table>
        <tbody>
          <tr class="d-flex align-content-between flex-wrap">
            <% @albums.each do |album| %>
              <td class="d-flex justify-content-center m-3">
                <%= link_to customer_album_path(album.id) do %>
                  <%= image_tag album.get_jacket_image(400,200) %></br>
                  <%= album.name %></br>
                  ¥<%= album.price.to_s(:delimited) %>
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

<!--アイテムの検索結果-->
  <div class="row">
    <div class="search-list">
      <table>
        <tbody>
          <tr class="d-flex align-content-between flex-wrap">
            <% @items.each do |item| %>
              <td class="d-flex justify-content-center m-3">
                <%= link_to customer_item_path(item.id) do %>
                  <%= image_tag item.get_item_image(400,200) %></br>
                  <%= item.name %></br>
                  ¥<%= item.price.to_s(:delimited) %>
                <% end %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="d-flex justify-content-end mb-5 pb-5">
  <div class="mr-5">
    <p>ページ</p>
    <%= paginate @artists%>
    <div>
      <%= paginate @albums %>
      <div>
        <%= paginate @items %>
      </div>
    </div>
  </div>
</div>


