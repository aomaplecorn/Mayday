<div class="container">
  <div class="row">
    <h4 class="d-flex align-items-center m-5" style="background-color: #EEEEEE;">管理者ログイン</h4>
  </div>

  <div class="row">
    <table class="d-flex align-items-center justify-content-center my-auto mx-auto" style="height:300px;">
      <%= form_with model: @admin,url: admin_session_path do |f| %>
      <% if flash[:alert] %>
        <tr>
          <td colspan="2">
            <p class="alert text-danger"><%= alert %></p>
          </td>
        </tr>
      <% end %>
      <tr>
        <div class="field">
          <td>メールアドレス</td>
          <td><%= f.email_field :email, size: "30", autofocus: true, autocomplete: "email" %></td>
        </div>
      </tr>
      <tr>
        <div class="field">
          <td>パスワード</td>
          <td><%= f.password_field :password, size: "30", autocomplete: "current-password" %></td>
        </div>
      </tr>
      <tr class="actions">
        <td></td>
        <td><%= f.submit "ログイン", class: "btn btn-primary mt-4" %></td>
      </tr>
      <% end %>
    </table>

<%= render "admin/shared/links" %>

  </div>
</div>