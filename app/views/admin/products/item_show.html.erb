<h1>Admin::Products#item_show</h1>

<div class="container">
  <div class="row">
    <div class="col-4 mt-4">
      <%= image_tag @item.get_item_image(350,250) %>
    </div>
    <div class="col-5 offset-1 mt-4">
      <h4>
          <strong>
              <%= @item.name %>
          </strong>
      </h4>
        <p style="white-space: pre-line;">
          <%= @item.introduction %>
        </p>
      <div class="mt-5">
        <strong style="font-size: 20px;">
            ¥ <%= @item.price.to_s(:delimited) %>
        </strong>
      </div>
      <div>
          在庫<%= @item.amount %>個
      </div>
      <div class="mt-3">
          <div class="d-flex justify-content-end">
              <%= link_to "アイテムを強制削除",admin_item_path(@item.id), method: :delete, 'data-confirm' => '削除した場合、二度とデータは戻りません。', class: "btn btn-danger" %>
          </div>
      </div>
    </div>
  </div>
</div>
