<h1>Admin::Products#album_show</h1>

<h2>アルバム詳細画面</h2>
<div class="row">
  <div class="col-2 ml-3">
    <%= image_tag @album.get_jacket_image(350,350) %>
  </div>
  <div class="col-xl-8 offset-xl-1">
    <h2><%= @album.name %></h2>
    <div>
      <%= @album.name %>
    </div>
    <div>
      ¥<%= @album.price.to_s(:delimited) %>-
    </div>
    <div>
      作成日：<%= @album.created_at.strftime('%Y/%m/%d') %>
    </div>
    <div class="d-flex justify-content-end">
      <%= link_to 'アルバムの強制削除', admin_album_path(@album.id), method: :delete, "data-confirm" => "削除した場合、二度とデータは戻りません", class: "btn btn-danger" %>
    </div>
  </div>
  <div class="offset-1">
  <% if @album.released == true %>
    <p>このアルバムは公開されています</p>
    <% else %>
    <p>このアルバムは公開されていません</p>
  <% end %>
  </div>
</div>

<!--以下、楽曲一覧-->
<table class="table table-striped text-center">
  <thead>
    <tr class="bg-info text-white">
      <td>track</td>
      <td></td>
      <td>楽曲名</td>
      <td>値段</td>
      <td>楽曲ファイル</td>
    </tr>
  </thead>
  <tbody>
    <% @musics.each do |music| %>
    <tr>
      <td class="align-middle"><%= music.track %></td>
      <td class="align-middle"><%= image_tag @album.get_jacket_image(50,50) %></td>
      <td class="align-middle"><%= music.name %></td>
      <td class="align-middle">¥<%= music.price.to_s(:delimited)%></td>
      <td class="align-middle"><%= audio_tag(polymorphic_path(music.get_audio), controls: true ,controlslist: "nodownload") %></td>
    </tr>
    <% end %>
  </tbody>
</table>